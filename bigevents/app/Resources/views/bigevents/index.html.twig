{% extends 'base.html.twig' %}

{% block body %}

       

 <h2 class="page-header jumbotron"> Latest Events @ BIGevents </h2>

   <table class="table table-striped">

    <thead>

        <tr>

            <th>#</th>

            <th></th>

            <th>Event</th>

            <th>Date</th>

            <th></th>

        </tr>

    </thead>

{% for bigevents in bigevents %}

    <tbody>

        <tr>

            <th scope="row">{{bigevents.id}}</th>

            <td style="max-width: 200px"><img class="img-responsive" style="width: 100%" src="{{bigevents.eventImg}}"></td>

            <td>{{bigevents.eventName}}</td>

            <td>{{bigevents.eventDate|date('F j, Y, g:i a')}}</td>



            <td>

                <a href="/bigevents/details/{{bigevents.id}}" class="btn btn-success">View</a>

                <a href="/bigevents/edit/{{bigevents.id}}" class="btn btn-default">Edit</a>

                <a href="/bigevents/delete/{{bigevents.id}}" class="btn btn-danger">Delete</a>        

            </td>

        </tr> 
    

{% endfor %}

    </tbody>

    </table>

{% endblock %}