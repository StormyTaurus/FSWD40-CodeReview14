{% extends 'base.html.twig' %}

{% block body %}

       

 <h2 class="page-header"> Latest bigevents </h2>

   <table class="table table-striped">

    <thead>

        <tr>

            <th>#</th>

            <th>bigevents</th>

            <th>Due Date</th>

            <th></th>

        </tr>

    </thead>

{% for bigevents in bigevents %}

    <tbody>

        <tr>

            <th scope="row">{{bigevents.id}}</th>

            <td>{{bigevents.eventName}}</td>

            <td>{{bigevents.eventDate|date('F j, Y, g:i a')}}</td>

            <td> <a href="/bigevents/details/{{bigevents.id}}" class="btn btn-success">View</a>

                   

            <a href="/bigevents/edit/{{bigevents.id}}" class="btn btn-default">Edit</a>

            <a href="/bigevents/delete/{{bigevents.id}}" class="btn btn-danger">Delete</a>        

            </td>

        </tr> 
    

{% endfor %}

    </tbody>

    </table>

{% endblock %}